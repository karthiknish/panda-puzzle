{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="page-width page-width--narrow section-{{ section.id }}-padding">
  <h1 class="main-page-title page-title h0{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
    Welcome to Panda Puzzle - Home
  </h1>
  <div class="rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    <p>
      At Panda Puzzle, we are dedicated to supporting individuals with autism and neurodiversity. Our mission is to
      provide resources, guidance, and community for families navigating these unique challenges.
    </p>
    <h2>Key Links</h2>
    <ul>
      <li><a href="#about-us">About Us</a></li>
      <li><a href="#autism-and-neurodiversity">Autism and Neurodiversity</a></li>
      <li><a href="#communication">Communication Tools</a></li>
      <li><a href="#visuals">Visual Aids</a></li>
      <li><a href="#therapy-and-support">Therapy and Support</a></li>
      <li><a href="#resources">Resources</a></li>
      <li><a href="#blog">Blog</a></li>
      <li><a href="#shop">Shop and Products</a></li>
    </ul>
    <h2>Featured Resources</h2>
    <p>
      Explore our collection of testimonials and resources designed to empower families and individuals on their
      journey.
    </p>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
