<div class="page-width">
  <h1>{{ page.title }}</h1>
  
  <div class="rte">
    {{ page.content }}
  </div>

  <div class="about-us-sections">
    <section>
      <h2>Our Story</h2>
      {{ section.settings.our_story }}
    </section>

    <section>
      <h2>Our Team</h2>
      {{ section.settings.our_team }}
    </section>

    <section>
      <h2>Our Mission and Values</h2>
      {{ section.settings.mission_values }}
    </section>

    <section>
      <h2>How We Help</h2>
      {{ section.settings.how_we_help }}
    </section>
  </div>
</div>

{% schema %}
{
  "name": "About Us Page",
  "settings": [
    {
      "type": "richtext",
      "id": "our_story",
      "label": "Our Story"
    },
    {
      "type": "richtext",
      "id": "our_team",
      "label": "Our Team"
    },
    {
      "type": "richtext",
      "id": "mission_values",
      "label": "Mission and Values"
    },
    {
      "type": "richtext",
      "id": "how_we_help",
      "label": "How We Help"
    }
  ]
}
{% endschema %}